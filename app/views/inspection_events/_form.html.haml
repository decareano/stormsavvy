= form_for @inspection_event do |f|
  -if @inspection_event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inspection_event.errors.count, "error")} prohibited this inspection_event from being saved:"
      %ul
        - @inspection_event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :site_id
    = f.number_field :site_id
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :submitted
    = f.datetime_select :submitted
  .actions
    = f.submit 'Save'
