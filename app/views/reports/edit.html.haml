.container
  .row
    .span12
      %h2 Edit Report
      = simple_nested_form_for @report do |f|
        %fieldset#site_information
          %legend Site Information
          = f.input :site_information_name, :input_html => { :value => @report.site.name }
          = f.input :site_address_1,        :input_html => { :value => @report.site.address_1 }
          = f.input :site_address_2,        :input_html => { :value => @report.site.address_2 }
          = f.input :site_city,        :input_html => { :value => @report.site.city }
          = f.input :site_state,        :input_html => { :value => @report.site.state }
        %fieldset#company_information
          %legend Company Information
          = f.input :contractor_name,        :input_html => { :value => current_user.contractor_name }
          = f.input :contractor_address_1,        :input_html => { :value => current_user.contractor_address_1 }
          = f.input :contractor_address_2,        :input_html => { :value => current_user.contractor_address_2 }
          = f.input :contractor_city,        :input_html => { :value => current_user.contractor_city }
          = f.input :contactor_state,        :input_html => { :value => current_user.contractor_state }
          = f.input :contactor_zipcode, :as => :string,        :input_html => { :value => current_user.contractor_zipcode }

        .actions
          = f.submit "Save Report", :class => "btn btn-primary"
