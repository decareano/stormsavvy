%h3 Weekly Inspection (CEM2030)
%br
%h4 Page 1
= simple_nested_form_for @report do |f|
  .row
    .span4
      %fieldset#site_information
        %legend Site Information
        /= f.input :site_information_name, :input_html => { :value => @report.site_information_name }
        /= f.input :site_address_1, :input_html => { :value => @report.site_address_1 }
        /= f.input :site_address_2, :input_html => { :value => @report.site_address_2 }
        /= f.input :site_city, :input_html => { :value => @report.site_city }
        /= f.input :site_state, :input_html => { :value => @report.site_state }
        /= f.input :site_zipcode, :input_html => { :value => @report.site_zipcode }

  .actions
    = f.submit "Save Report", :class => "btn btn-primary"
