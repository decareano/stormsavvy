= form_for(@report) do |f|
  - if @report.errors.any?
    #error_explanation
      %h2
        = pluralize(@report.errors.count, "error")
        prohibited this friend from being saved:
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :attachment
    = f.file_field :attachment
  .actions
    = f.submit 'Upload Attachment'
    = link_to 'Cancel', reports_path, class: 'button'