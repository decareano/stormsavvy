= form_for @site do |f|
  -if @site.errors.any?
    #error_explanation
      %h2= "#{pluralize(@site.errors.count, "error")} prohibited this site from being saved:"
      %ul
        - @site.errors.full_messages.each do |msg|
          %li= msg

  .cf
    = f.label :name
    .input
      = f.text_field :name
  .cf
    = f.label :description
    .input
      = f.text_field :description
  .cf
    = f.label :costcode
    .input
      = f.text_field :costcode
  .cf
    = f.label :size
    .input
      = f.text_field :size
  .cf
    = f.label :exposed_area
    .input
      = f.text_field :exposed_area
  .cf
    = f.label :location
    .input
      = f.text_field :location
  .actions
    = f.submit 'Save', :class => "btn"
