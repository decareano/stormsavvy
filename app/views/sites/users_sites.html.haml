.container
  .row
    .span12
      .row
        .span8
          .panel
            .inner
              %h1 Active Sites
              %hr
              %ul
                - @projects.each do |project|
                  %li
                    = link_to project.name, project_path(project)
                    %ul
                      - project.sites.each do |site|
                        %li= link_to site.name, project_site_path(project, site)

        .span4= render 'dashboard/sidebar'

