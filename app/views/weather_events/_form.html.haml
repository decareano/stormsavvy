= form_for @weather_event do |f|
  -if @weather_event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weather_event.errors.count, "error")} prohibited this weather_event from being saved:"
      %ul
        - @weather_event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :site_id
    = f.number_field :site_id
  .field
    = f.label :eventdate
    = f.datetime_select :eventdate
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :rainfall
    = f.text_field :rainfall
  .field
    = f.label :inspected
    = f.check_box :inspected
  .field
    = f.label :qualifying
    = f.check_box :qualifying
  .actions
    = f.submit 'Save'
